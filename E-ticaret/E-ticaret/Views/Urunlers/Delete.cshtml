@model E_ticaret.Models.Urunler

@{
    ViewBag.Title = "Ürün Sil";
}

<h2>Ürün Silme Ekranı</h2>

<div>
    @*<h4>Ürünler</h4>*@
    <hr />
    <dl class="dl-horizontal">
        <h4>Ürünler</h4>
        <dt>
            Ürün Adı
            @*@Html.DisplayNameFor(model => model.UrunAdi)*@
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UrunAdi)
        </dd>

        <dt>
            Ürün Açıklaması
            @*@Html.DisplayNameFor(model => model.UrunAciklamasi)*@
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UrunAciklamasi)
        </dd>

        <dt>
            Ürün Fiyatı
            @*@Html.DisplayNameFor(model => model.UrunFiyati)*@
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UrunFiyati)
        </dd>

        <dt>
            Kategori
            @*@Html.DisplayNameFor(model => model.Kategori.Kategoriadi)*@
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Kategori.Kategoriadi)
        </dd>

    </dl>

    <h4>Bu ürünü silmek istediğinize emin misiniz?</h4>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Sil" class="btn btn-default" /> |
            @Html.ActionLink("Ürünlere geri dön", "Index")
        </div>
    }
</div>
