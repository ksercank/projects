@model IEnumerable<E_ticaret.Models.Kategori>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Yeni Oluştur", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Kategoriadi)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Kategoriadi)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.KategoriID }, new { @class = "myclass" }) |
            @Html.ActionLink("Detaylar", "Details", new { id=item.KategoriID }, new { @class = "myclass" }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.KategoriID }, new { @class = "myclass" })
        </td>
    </tr>
}

</table>
