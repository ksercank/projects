@model IEnumerable<E_ticaret.Models.Sepet>

@{
    ViewBag.Title = "Index";
}

<h2>Sepet</h2>

@*<p>
        @Html.ActionLink("Yeni Oluştur", "Create")
    </p>*@
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Urunler.UrunAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adet)
        </th>
        @*<th></th>*@
        <th>
            @Html.DisplayNameFor(model => model.Toplam)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.AspNetUser.Email)
            </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Urunler.UrunAdi)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Adet)
                </td>*@
            <td>
                <form action="/Sepets/SepetGuncelle">
                    <input type="hidden" name="id" id="id" value="@item.SepetID" />
                    <input type="number" name="adet" id="adet" value="@item.Adet" style="width:50px; text-align:center;font-size:15px" />
                    <input type="submit" id="gonder" value="Güncelle" style="font-size:15px" />
                </form>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Toplam)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.AspNetUser.Email)
                </td>*@

            @*<td>
                    @Html.ActionLink("Düzenle", "Edit", new { id=item.SepetID }) |
                    @Html.ActionLink("Detaylar", "Details", new { id=item.SepetID }) |
                    @Html.ActionLink("Sil", "Delete", new { id=item.SepetID })
                </td>*@
            <td style="width:50%">
                @Html.ActionLink("X", "Delete", new { id = item.SepetID})
            </td>
        </tr>
    }
    <tr>
        <th></th>
        <th>Toplam:</th>
        <th>@Model.Sum(x => x.Toplam)</th>
    </tr>
    <tr>
        <td><a class="btn btn-secondary" href="@Url.Action("Index","Home")" style="font-size:13px">Alışverişe Devam Et</a></td>
        <td><a class="btn btn-success" href="@Url.Action("SiparisTamamla","Siparis")" style="font-size:13px"> Siparişi Tamamla</a></td>
    </tr>

</table>
