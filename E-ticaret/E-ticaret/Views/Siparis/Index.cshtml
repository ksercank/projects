@model IEnumerable<E_ticaret.Models.Siparis>

@{
    ViewBag.Title = "Sipariş Sayfası";
}

<h2>Siparişler</h2>

<p>
    @Html.ActionLink("Yeni oluştur", "Create")
</p>
<table class="table">
    <tr>
        <th>
