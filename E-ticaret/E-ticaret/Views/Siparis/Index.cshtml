        <td>
            @Html.DisplayFor(modelItem => item.TC_Kimlik)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tarih)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AspNetUser.Email)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.SiparisID }) |
            @Html.ActionLink("Detaylar", "Details", new { id=item.SiparisID }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.SiparisID })
